<!DOCTYPE html>
<html>
<head>
  <title>Jogo de Mem칩ria</title>
  <style>
    .card {
      width: 100px;
      height: 100px;
      background-color: #ccc;
      display: inline-block;
      margin: 10px;
      border-radius: 10px;
      font-size: 50px;
      text-align: center;
      line-height: 100px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Jogo de Mem칩ria</h1>
  <div id="game-board">
    <!-- Aqui ser칚o adicionadas as cartas do jogo -->
  </div>

  <script>
    // N칰mero de cartas no jogo
    var numCards = 6;

    // Array com os s칤mbolos que aparecer칚o nas cartas
    var symbols = ["游꼣", "游꼢", "游꺐", "游", "游볽", "游볭"];

    // Array que armazena as cartas selecionadas pelo jogador
    var selectedCards = [];

    // Fun칞칚o que cria as cartas do jogo
    function createCards() {
      var gameBoard = document.getElementById("game-board");
      for (var i = 0; i < numCards; i++) {
        var symbol = symbols[Math.floor(i/2)];
        var card = document.createElement("div");
        card.className = "card";
        card.innerHTML = symbol;
        card.setAttribute("data-symbol", symbol);
        card.addEventListener("click", function() {
          selectCard(this);
        });
        gameBoard.appendChild(card);
      }
    }

    // Fun칞칚o que 칠 chamada quando o jogador clica em uma carta
    function selectCard(card) {
      // Se a carta j치 foi selecionada, saia da fun칞칚o
      if (card.classList.contains("selected")) {
        return;
      }
      // Adicione a classe "selected"  carta
      card.classList.add("selected");
      // Adicione a carta ao array de cartas selecionadas
      selectedCards.push(card);
      // Se o jogador j치 selecionou duas cartas, verifique se elas s칚o iguais
      if (selectedCards.length == 2) {
        var card1 = selectedCards[0];
        var card2 = selectedCards[1];
        // Se as cartas tiverem o mesmo s칤mbolo, remova-as do jogo
        if (card1.getAttribute("data-symbol") == card2.getAttribute("data-symbol")) {
          card1.remove();
          card2.remove();
        }
        // Limpe o array de cartas selecionadas
        selectedCards = [];
      }
    }

    // Chame a fun칞칚o createCards() para iniciar o jogo
    createCards();
  </script>
</body>
</html>
